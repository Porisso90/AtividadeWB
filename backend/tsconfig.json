{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",  // Pode ser "nodenext" se for necessário
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,  // Ajuste caso precise de mais flexibilidade com 'any'
    "strictNullChecks": true,  // Melhor deixar ativado para evitar problemas com null/undefined
    "noUnusedLocals": true,    // Melhora a qualidade do código
    "noUnusedParameters": true,
    "declaration": true,       // Caso queira gerar arquivos '.d.ts'
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
